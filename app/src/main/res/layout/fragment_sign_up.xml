<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="251dp"
            android:layout_height="331dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/kortabitartelogo"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/showSignUp"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="108dp"
            android:backgroundTint="#009688"
            app:cornerRadius="5dp"
            app:icon="@android:drawable/ic_menu_view"
            app:iconTint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="10dp"
            android:text=" Korreo Elektronikoa:"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/emailSignUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/pwdSignUp"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="32dp"
            android:ems="10"
            android:hint="Pasahitza"
            android:inputType="textPassword"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/erregistratuBtn"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/usernameSignUp"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="13dp"
            android:ems="10"
            android:hint="Erabiltzaile Izena"
            android:inputType="text"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="10dp"
            android:text=" Pasahitza:"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/pwdSignUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="10dp"
            android:text=" Erabiltzaile Izena:"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/usernameSignUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/emailSignUp"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="11dp"
            android:ems="10"
            android:hint="Korreo Elektronikoa"
            android:inputType="text"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/erregistratuBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="128dp"
            android:layout_marginEnd="134dp"
            android:layout_marginBottom="28dp"
            android:backgroundTint="#E91E63"
            android:text="Erregistratu"
            app:cornerRadius="5dp"
            app:icon="@android:drawable/ic_menu_save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/atzeraBtn"
            android:layout_width="68dp"
            android:layout_height="56dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="7dp"
            android:backgroundTint="#E91E63"
            app:cornerRadius="5dp"
            app:icon="@android:drawable/ic_menu_revert"
            app:iconTint="#000000"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>